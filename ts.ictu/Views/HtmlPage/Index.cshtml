@model List<ts.ictu.HtmlPage>
<div class="row-fluid">
    <div class="span12">
        <h3>
            Html Page</h3>
        <div class="row-fluid">
            <p style="margin-left: 7px;">
                @Html.ActionLink("Tạo page", "NewOrEdit", null, new { @class = "btn btn-primary" })
            </p>
        </div>
        <table class="table">
            <tr>
                <th>
                    Key url
                </th>
                <th>
                    Url
                </th>
                <th>
                    Nội dung
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.KeyUrl, "NewOrEdit", new { id = item.ID })
                    </td>
                    <td>
                        @("/htmlpage/details/" + item.KeyUrl)
                    </td>
                    <td>
                        @(item.Content != null && item.Content.Length > 70 ? item.Content.Substring(0, 70) + "..." : item.Content)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
