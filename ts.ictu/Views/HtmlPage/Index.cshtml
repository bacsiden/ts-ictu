@model List<ts.ictu.HtmlPage>
<div class="row-fluid">
    <div class="span12">
        <h3>
            Html Page</h3>
        <div class="row-fluid">
            @Html.Partial("_TopButton", "HtmlPage")
        </div>
        <table class="table">
            <tr>
                <th>
                    <input type="checkbox" name="" value="" class="checkAll" />
                </th>
                <th>
                    Key url
                </th>
                <th>
                    Url
                </th>
                <th>
                    Nội dung
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="checkOwner" value="@item.ID" class="checkitem"/>
                    </td>
                    <td>
                        @Html.ActionLink(item.KeyUrl, "NewOrEdit", new { id = item.ID })
                    </td>
                    <td>
                        @("/htmlpage/details/" + item.KeyUrl)
                    </td>
                    <td>
                        @(item.Content != null && item.Content.Length > 70 ? item.Content.Substring(0, 70) + "..." : item.Content)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
