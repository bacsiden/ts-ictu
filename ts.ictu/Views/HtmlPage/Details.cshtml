@model ts.ictu.HtmlPage
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ts.ictu.DB.Entities.Menu.FirstOrDefault(m => m.Url != null && m.Url.ToLower().Contains(Model.KeyUrl.ToLower())).Title;
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <div class="panel-details" style="padding: 17px;">
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <div class="col-md-4">
                @Html.Action("RightPanel", "Post", new { model = Model })
            </div>
        </div>
    </div>
</div>
