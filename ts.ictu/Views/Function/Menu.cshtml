@model ts.ictu.mFunction
<h3>
    Add menu to function: @Model.Title</h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Add menu unsuccessfully")
@using (Html.BeginForm("Menu", "Function", new { functionID = Model.ID }))
{
    <div>
        @Html.Hidden("listCheck", null, new {id="HiddenListRole"})
        <div class="control-group">
            <label class="control-label">
                List Menu</label>
            <div class="controls" id="ListRoles">
                <label class="checkbox" style="padding-bottom:5px; width:170px; border-bottom:1px solid #0e6390">
                    <input type="checkbox" class="checkAll" value="" />
                    Check All
                </label>                
                @Html.Raw(ViewBag.listMenu)
            </div>
            <input type="submit" value="OK" class="btn btn-primary" id="SubmitRole" />
            @Html.ActionLink("Cancel", "index", null, new { @class = "btn" })
        </div>
    </div>
}