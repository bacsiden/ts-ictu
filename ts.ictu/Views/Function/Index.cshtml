@model IEnumerable<ts.ictu.mFunction>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>List function</h3>
            </div>
            <div class="box-content">
                <table class="table">
                    <thead>
                        <tr class="table table-hover">
                            <th>
                                Function name
                            </th>
                            <th>
                                List menu
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @foreach (var m in item.mMenu)
                                    {
                                        @m.Title <br />
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Add menu", "Menu", new { id = item.ID })
                                </td>                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
