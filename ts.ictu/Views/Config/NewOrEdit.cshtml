@model ts.ictu.mConfig
@{
    ViewBag.Title = "System config";
}
<h3>Config</h3>
@*<div class="span12">*@
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)                    

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Multiline)
        <div class="control-group">
            <label class="control-label" for="Name">
                Key</label>
            <div class="controls">
                <div class="span12">
                    @Html.TextBoxFor(model => model.Key, new { @class = "input-xlarge", Readonly = "readonly" })
                </div>
            </div>
        </div>
        if (Model.Multiline)
        {
        <div class="control-group">
            <label class="control-label" for="Address">
                Value</label>
            <div class="controls">
                <div class="span12">
                    @Html.TextAreaFor(model => model.Title, new { @class = "input-xlarge", Rows = "4" })
                </div>
            </div>
        </div>
        }
        else
        {
        <div class="control-group">
            <label class="control-label" for="Address">
                Value</label>
            <div class="controls">
                <div class="span12">
                    @Html.TextBoxFor(model => model.Title, new { @class = "input-xlarge" })
                </div>
            </div>
        </div>
        }
        <div class="form-actions">
            @Html.Partial("_ShowSaveEdit", "")
        </div>
    }
@*</div>*@

