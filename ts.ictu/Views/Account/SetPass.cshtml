<div id="Modal-General">
    @model ts.ictu.Models.ChangePasswordModel

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
    <div class="modal-header">
        <button class="close" data-dismiss="modal">
            ×</button><h3>Set password: @Request.QueryString["username"]</h3>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("SetPassword", "Account"))
        {
            @Html.ValidationSummary(true, "Đổi mật khẩu không thành công, vui lòng thử lại.")
            @Html.Hidden("username", Request.QueryString["username"])
            <div class="control-group">
                <label class="control-label">
                    Password mới <span class="f_req">*</span></label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.NewPassword, new { Class = "" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.NewPassword)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Nhập lại password<span class="f_req">*</span></label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { Class = "" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input class="btn btn-info" type="submit" value="Set password" />
                    <button type="button" class="btn" onclick="javascript:window.history.go(-1);">
                Cancel</button>
                </div>
            </div>
        }
    </div>
</div>
