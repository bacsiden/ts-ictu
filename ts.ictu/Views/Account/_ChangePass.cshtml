<div id="Modal-General">
    @model ts.ictu.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change password";
}
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[name="OldPassword"]').focus();
        });
    </script>
    <div class="modal-header">
        <button class="close" data-dismiss="modal">
            ×</button><h3>@ViewBag.Title</h3>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm("ChangePassword", "Account", null, new AjaxOptions
        {
            UpdateTargetId = "ModalGeneral",
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
        }, new { Class = "form-horizontal well", @style = "margin-bottom: 0px;" }))
        {
           
            @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
            <div class="control-group formSep">
                <label class="control-label">
                    Old Password <span class="f_req">*</span></label>
                <div class="controls">
                    @Html.PasswordFor(m => m.OldPassword, new { Class = "focus" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.OldPassword)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    New Password <span class="f_req">*</span></label>
                <div class="controls">
                    @Html.PasswordFor(m => m.NewPassword, new { Class = "" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.NewPassword)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Confirm Password <span class="f_req">*</span></label>
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { Class = "" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input class="btn btn-info" type="submit" value="Change password" />
                    <a class="btn" data-dismiss="modal">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>
