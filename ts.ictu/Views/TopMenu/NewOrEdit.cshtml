@model ts.ictu.Menu
<h3>
    Cập nhật menu
</h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Add new menu unsuccessfully!")
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
     @Html.ValidationSummary(true)                    

    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Activated)
    <div class="control-group">
        <label class="control-label">
            Tên menu</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.Title)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Thứ tự</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.Oder)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            URL</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.Url)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Kênh tin</label>
        <div class="controls">
            @Html.DropDownListFor(m => m.CateID, (SelectList)ViewBag.kenhtin)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Menu cha</label>
        <div class="controls">
            @Html.DropDownListFor(m => m.ParentID, (SelectList)ViewBag.dropDown)
        </div>
    </div>
    <div class="form-actions">
        @Html.Partial("_ShowSaveEdit", "")
    </div>
}